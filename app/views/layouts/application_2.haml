!!! Strict
%html
  %head
    %title
      = h(yield(:title) || "Violination")
    /= stylesheet_link_tag  'application', 'style', '/javascripts/fancybox/fancybox', 'menu_new', :cache => true
    / = javascript_include_tag 'jquery', 'jquery.ui', 'jquery.dropdownPlain.js', 'application', 'fancybox/jquery.fancybox-1.3.1.pack', :cache => true
    =stylesheet_link_tag 'all', '/javascripts/fancybox/fancybox'
    =javascript_include_tag 'all', 'fancybox/jquery.fancybox-1.3.1.pack'
    -if request.user_agent.to_s.include?('MSIE 7.0')
      = render '/layouts/ie.html.erb'
    = yield(:head) 
  %body
    %div#popup_background 
      %div#divFileProgressContainer
    %div#header
      %div.header_left
      %div#nav_right
        =render '/layouts/header.html.erb'
      %div#nav_left
        =render '/layouts/menu_new.html.erb'
    %div#container
      %div#flash
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}"
      %div#adds
        =render '/layouts/adds_content.haml'
      %div#content_2
        =yield
    %div#footer
      %div.content
        %ul
          %li
            =render '/layouts/footer.html.erb'