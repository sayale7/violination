!!! Strict
%html
  %head
    %title
      = h(yield(:title) || "Violination")
    = stylesheet_link_tag  'application', 'style', '/javascripts/fancybox/fancybox', 'menu_new'
    = javascript_include_tag 'jquery', 'jquery.ui', 'jquery.dropdownPlain.js', 'application', 'fancybox/jquery.fancybox-1.3.1.pack'
    -if request.user_agent.to_s.include?('MSIE') and request.user_agent.to_s.include?('MSIE 8.0')
      = render '/layouts/ie.html.erb'
    = yield(:head) 
  %body
    %div#popup_background 
    %div#header
      %div.header_left
        %span.logo_large
          =link_to "Violination.com", root_url
        %span.logo_small
          =link_to "Qualität aus Geigenbauwerkstätten", root_url
      %div#nav_right
        =image_tag 'de.png'
        =image_tag 'gb.png'
      %div#nav_left
        =render '/layouts/menu_new.html.erb'
    %div#container
      %div#flash
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}"
                    
      %div#content
        =yield

/,'/fancybox/jquery.easing-1.3.pack'