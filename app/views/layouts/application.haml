!!! Strict
%html
  %head
    %title
      = h(yield(:title) || "Violination")
    = stylesheet_link_tag 'menu', 'application', 'style', '/javascripts/fancybox/fancybox'
    = javascript_include_tag 'jquery', 'jquery.ui', 'application', 'fancybox/jquery.fancybox-1.3.1.pack'
    = yield(:head) 
  %body
    %div#popup_background 
    %div#header
      %div#nav_left
        =render '/layouts/menu.html.erb'
      %div#nav_right
        =image_tag 'de.png'
        =image_tag 'gb.png'
    %div#container
      %div#flash
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}"
                    
      %div#content
        =yield

/,'/fancybox/jquery.easing-1.3.pack'