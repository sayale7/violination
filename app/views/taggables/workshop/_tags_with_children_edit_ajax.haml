-added_child_tags(@tag, @the_instance.id).each do |sub_tag|
  %div.instance_sub_tag_with_children
    %div.instance_sub_tag_show.visible
      =sub_tag.tag_names.find_by_language(get_locale.to_s).value
      = render '/taggables/workshop/sub_tags_with_children_show', :sub_tag => sub_tag
  
    %div.instance_sub_tag_edit.hidden
      %strong
        =sub_tag.tag_names.find_by_language(get_locale.to_s).value
      = render '/taggables/workshop/sub_tags_with_children_edit', :sub_tag => sub_tag