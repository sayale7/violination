<% content_for :head do %>
  <%= GMap.header(:with_vml => false) %>
  <%= @map.to_html %>
<% end %>
<div class="site">
<div class='start_left'>
  <% unless Site.find_all_by_siteable_type_and_parent_id_and_active('Startleft', nil, 1).nil? %>
    <% Site.find_all_by_siteable_type_and_parent_id_and_active('Startleft', nil, 1, :order => 'position').each do |site| %>
      <% site.sitetexts.find_all_by_active_and_archive(1, 0).each do |text| %>
      <p>
        <%= text.sitetextnames.find_by_language(get_locale.to_s).content %>
      </p>
      <div style="height:5px; width:100%;"></div>
      <% end %>
    <% end %>
  <% end %>
</div>

<div class="google_map">
  <h1><%= t('user.near') %></h1>
  <%= @map.div(:width => 500, :height => 400) %>
</div>

<div class='start_right'>
    <% unless Site.find_all_by_siteable_type_and_parent_id_and_active('Startright', nil, 1).nil? %>
      <% Site.find_all_by_siteable_type_and_parent_id_and_active('Startright', nil, 1, :order => 'position').each do |site| %>
        <% site.sitetexts.find_all_by_active_and_archive(1, 0).each do |text| %>
        <p>
          <%= text.sitetextnames.find_by_language(get_locale.to_s).content %>
        </p>
        <div style="height:5px; width:100%;"></div>
        <% end %>
      <% end %>
    <% end %>
</div>
</div>

